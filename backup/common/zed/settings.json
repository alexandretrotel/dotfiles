{
  "format_on_save": "off",

  "buffer_font_size": 12.0,
  "ui_font_size": 16,

  "theme": {
    "mode": "system",
    "light": "macOS Classic Light",
    "dark": "macOS Classic Dark"
  },

  "icon_theme": {
    "mode": "system",
    "light": "Colored Zed Icons Theme Light",
    "dark": "Colored Zed Icons Theme Dark"
  },

  "terminal": {
    "dock": "bottom"
  },

  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },

  "notification_panel": {
    "button": false
  },

  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "model_parameters": []
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
